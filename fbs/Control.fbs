namespace SplayApi;

enum CONTROL_TYPE:uint8 {
  TRIGGER = 0,
  EVENT,
}

enum TRIGGER_TYPE:uint8 {
  NONE = 0,
  OSC,
  RS232,
  IO,
  ARTNET,
  DMX,
  SACN,
  POWERUP,
  UDP,
  BUTTON
 }

enum EVENT_TYPE:uint8 {
  NONE = 0,
  RS232,
  IO,
  ARTNET,
  DMX,
  SACN,
  OSC,
  UDP,
}

table TriggerTable {
  id:int;
  name:string;
  type:TRIGGER_TYPE;
  active:bool;
  value:string; // json or string with details depending on type
  start:uint32;
}

table EventTable {
  id:int;
  name:string;
  type:EVENT_TYPE;
  active:bool;
  value:string; // json or string with details depending on type
  start:uint32;
}
